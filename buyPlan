async function buyPlan(planId) {
  try {
    const res = await fetch("/api/purchase", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({
        userId: "teste123",
        planId
      })
    });

    const text = await res.text();
    console.log(text);
    alert(text);

  } catch (err) {
    alert("Erro JS: " + err.message);
  }
}
